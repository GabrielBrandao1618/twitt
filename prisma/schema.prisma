generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id
  name      String
  user      String   @unique
  bio       String
  createdAt DateTime @default(now())
  Twitt     Twitt[]
}

model Twitt {
  id        String   @id
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  author    User     @relation(fields: [authorId], references: [id])
  authorId  String

  @@index([authorId])
}
